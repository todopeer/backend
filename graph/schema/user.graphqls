type User {
	id: ID!
	email: String!
	name: String
	runningTask: Task
}

input LoginInput {
	email: String!
	password: String!
}


extend type Query {
	me: User @auth
}

extend type Mutation {
	login(input: LoginInput!): AuthPayload!
	logout: Boolean! @auth
}

type AuthPayload {
	user: User!
	token: String!
}
